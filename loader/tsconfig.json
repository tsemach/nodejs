{
  "compilerOptions": {    
    "module": "commonjs",
    "target": "es2022",
    "lib": ["es2022", "esnext.disposable"],
    "types": ["mocha", "node", "reflect-metadata"],
    "allowJs": true,    
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": [
    "./src/**/*",    
    "./tests/**/*"    
  ]
}

